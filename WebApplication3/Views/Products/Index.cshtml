@model IEnumerable<MyAspNetCoreApp.Models.Item>

@{
    ViewData["Title"] = "Product List";
}

<!-- Page Title -->
<h2 class="text-center my-4 text-light">Product List</h2>

<!-- Add New Product Button -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <a class="btn btn-success text-white" asp-action="Create">
        <i class="fas fa-plus-circle"></i> Add New Product
    </a>
</div>

@if (Model != null && Model.Any())
{
    <!-- Table with Styling -->
    <div class="table-responsive">
        <table class="table table-dark table-bordered table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@String.Format("{0:C}", item.Price)</td>
                        <td>@item.Category</td>
                        <td>
                            <!-- Edit Button -->
                            <a class="btn btn-warning btn-sm text-white" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="fas fa-edit"></i> Edit
                            </a>

                            <!-- Details Button -->
                            <a class="btn btn-info btn-sm text-white" asp-action="Details" asp-route-id="@item.Id">
                                <i class="fas fa-eye"></i> Details
                            </a>

                            <!-- Delete Button -->
                            <a class="btn btn-danger btn-sm text-white" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-center text-muted">No products found.</p>
}

<!-- Styling for Dark Mode -->
<style>
    body {
        background-color: #121212;
        color: #ffffff;
    }

    h2.text-light {
        color: #ffffff;
    }

    .btn {
        font-weight: bold;
        border-radius: 25px;
        padding: 10px 20px;
        font-size: 1rem;
        transition: transform 0.3s ease;
    }

        .btn:hover {
            transform: scale(1.05);
        }

        .btn:active {
            transform: scale(1);
        }

    .table {
        background-color: #1e1e1e;
        border-radius: 15px;
        border: none;
    }

    .thead-light {
        background-color: #343a40;
        color: white;
    }

    .table-bordered, .table-hover tbody tr:hover {
        background-color: #333;
    }

    .table th, .table td {
        vertical-align: middle;
    }
</style>
