@model MyAspNetCoreApp.Models.Item

<h2>Delete Product</h2>

<p>Are you sure you want to delete this product?</p>

<div>
    <h4>@Model.Title</h4>
    <p>@Model.Description</p>
    <p>Price: @String.Format("{0:C}", Model.Price)</p>
</div>

<!-- Form to confirm deletion -->
<form asp-action="Delete" method="post">
    <!-- Hidden field to pass the Id to DeleteConfirmed action -->
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <!-- Cancel button: redirects back to the index page -->
    <a href="@Url.Action("Index", "Products")" class="btn btn-secondary">Cancel</a>
</form>
