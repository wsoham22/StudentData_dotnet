@model MyAspNetCoreApp.Models.Item

@{
    ViewData["Title"] = "Product Details";
}

<!-- Page Title -->
<h2 class="text-center my-4 text-light">Product Details</h2>

<!-- Product Information -->
<div class="card shadow-lg border-0 mb-4" style="background-color: #1e1e1e;">
    <div class="card-body">
        <!-- Display Product Attributes -->
        <div class="mb-3">
            <label class="text-light">Title:</label>
            <p class="text-muted">@Model.Title</p>
        </div>
        <div class="mb-3">
            <label class="text-light">Description:</label>
            <p class="text-muted">@Model.Description</p>
        </div>
        <div class="mb-3">
            <label class="text-light">Price:</label>
            <p class="text-muted">@String.Format("{0:C}", Model.Price)</p>
        </div>
        <div class="mb-3">
            <label class="text-light">Category:</label>
            <p class="text-muted">@Model.Category</p>
        </div>
        <div class="mb-3">
            <label class="text-light">Image:</label>
            <img src="@Model.Image" alt="Product Image" class="img-fluid" />
        </div>

        <!-- Back to List Button -->
        <a href="@Url.Action("Index", "Products")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<!-- Styling for Dark Mode -->
<style>
    body {
        background-color: #121212;
        color: #ffffff;
    }

    h2.text-light {
        color: #ffffff;
    }

    .card {
        border-radius: 15px;
    }

    .card-body {
        background-color: #1e1e1e;
        color: #d3d3d3;
        border-radius: 10px;
        padding: 20px;
    }

    .btn {
        font-weight: bold;
        border-radius: 25px;
        padding: 10px 20px;
        font-size: 1rem;
        transition: transform 0.3s ease;
    }

        .btn:hover {
            transform: scale(1.05);
        }

        .btn:active {
            transform: scale(1);
        }

    .text-muted {
        color: #b3b3b3 !important;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }
</style>
